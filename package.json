{
  "name": "vfm",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:nuxt": "pnpm --filter nuxt-example dev",
    "dev:viteplay": "pnpm --filter viteplay-example dev",
    "build": "pnpm --filter vue-final-modal build",
    "lint": "eslint . --ext=.ts,.vue --fix",
    "typecheck": "pnpm --parallel typecheck"
  },
  "dependencies": {
    "vue": "^3.2.37",
    "vue3-drag-resize": "^2.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/node": "^18.0.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/test-utils": "^2.0.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.19.0",
    "npm-watch": "^0.11.0",
    "pnpm": "^7.8.0",
    "sass": "^1.55.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.7.4",
    "vite": "^3.1.3",
    "vue-tsc": "^1.0.3"
  },
  "watch": {
    "build": {
      "patterns": [
        "packages/vue-final-modal/src"
      ],
      "extensions": "ts,vue"
    }
  }
}